#!/bin/bash

set -e

# From https://github.com/tpope/vim-obsession/issues/11
# Auto start vim-obession when starting vim with no args
if test -d "$1"; then
    cd "$1"
    if test -f Session.vim; then
        env vim -S
    else
        env vim -c Obsession .
    fi
elif test $# -gt 0; then
    env vim "$@"
elif test -f Session.vim; then
    env vim -S
else
    env vim -c Obsession
fi
