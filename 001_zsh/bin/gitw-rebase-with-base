#!/bin/bash

set -e

in_worktree=$(git rev-parse --is-inside-work-tree)
if [[ $in_worktree == "true" ]]; then
    gitw-update-base
    base_worktree=$(gitw-get-base 2> /dev/null)
    >&2 echo "Rebasing with '$base_worktree' base worktree"
    >&2 git rebase "$base_worktree"
else
    echo "ERROR: Must be run inside a git worktree"
    exit 1
fi

