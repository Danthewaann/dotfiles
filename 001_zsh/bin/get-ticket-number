#!/bin/bash

set -e

>&2 echo

# Get the ticketnumber for the current repo branch
currentbranch=$(git branch --show-current) 

if ! ticketnumber=$(echo "$currentbranch" | grep -Eo "\/.*[0-9]+.*\/" | grep -Eo "\d+"); then
    >&2 echo "ERROR: No ticketnumber found for $currentbranch"
    exit 1
fi

echo "$ticketnumber"
