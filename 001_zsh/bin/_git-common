#!/usr/bin/env bash

set -eo pipefail

if [[ -t 0 ]]; then
    export WHITE_BOLD='\033[1m'
    export GREEN_BOLD='\033[1;32m'
    export BLUE_BOLD='\033[1;34m'
    export RED_BOLD='\033[1;31m'
    export YELLOW_BOLD='\033[1;33m'
    export YELLOW='\033[0;33m'
    export NC='\033[0m'
    export RED='\033[0;31m'
else
    export WHITE_BOLD=''
    export GREEN_BOLD=''
    export BLUE_BOLD=''
    export RED_BOLD=''
    export YELLOW_BOLD=''
    export YELLOW=''
    export NC=''
    export RED=''
fi

function info () {
    local message="$1"
    >&2 echo -e "${WHITE_BOLD}${message}${NC}"
}

function success () {
    local message="$1"
    >&2 echo -e "${GREEN_BOLD}${message}${NC}"
}

function error () {
    local message="$1"
    >&2 echo -e "${RED}ERROR: ${message}${NC}"
}

function error_no_level () {
    local message="$1"
    >&2 echo -e "${RED}${message}${NC}"
}

function warn () {
    local message="$1"
    >&2 echo -e "${YELLOW}WARN: ${message}${NC}"
}

function warn_no_level () {
    local message="$1"
    >&2 echo -e "${YELLOW}${message}${NC}"
}

function indent() {
    sed 's/^/    /'
}
