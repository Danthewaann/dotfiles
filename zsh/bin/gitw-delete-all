#!/usr/bin/env python3

import pathlib
import re
import subprocess
import _utils
import sys

args = sys.argv[1:]

if not _utils.inside_bare_repo():
    for dirpath, dirnames, filenames in pathlib.Path.cwd().walk():
        for dir in dirnames:
            if (dirpath / dir / ".bare").exists():
                subprocess.run(["gitw-delete-all", *args], cwd=dirpath / dir)
else:
    cur_dir = pathlib.Path.cwd().stem
    print(f"Checking for git worktrees in {cur_dir}...")
    worktrees = _utils.check_output(["git", "worktree", "list"])
    for worktree in worktrees.splitlines():
        if not re.search(r"(\[main\]|\[master\]|\(bare\))", worktree):
            proc = subprocess.run(
                ["gitw-delete", worktree.split()[0], *args],
                text=True,
                stdout=subprocess.PIPE,
                stderr=subprocess.STDOUT,
            )
            print(_utils.indent(proc.stdout.strip()), file=sys.stderr)
