#!/usr/bin/env bash

set -oe pipefail

CUR_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)

source "$CUR_DIR/_git-common"

ticket_number=$(get-ticket-number)

if [[ -z "$BASE_TICKETS_URL" ]]; then
    error "BASE_TICKETS_URL environment variables is not set!"
    exit 1
fi

if [[ $OSTYPE == "darwin"* ]]; then
    PBCOPY="pbcopy"
else
    PBCOPY="xclip"
fi

>&2 printf "\nThe below has been copied to your clipboard! ðŸ“‹\n\n"
echo "$BASE_TICKETS_URL$ticket_number"
echo "$BASE_TICKETS_URL$ticket_number" | $PBCOPY
