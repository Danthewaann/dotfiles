#!/usr/bin/env python

import subprocess
import sys

pr_number = (
    sys.argv[1]
    if len(sys.argv) > 1
    else subprocess.check_output(
        ["gh", "pr", "view", "--json", "number", "--jq", ".number"], text=True
    ).strip()
)

subprocess.run(f"nvim . -c 'Octo pr edit {pr_number}'", shell=True, check=True)
