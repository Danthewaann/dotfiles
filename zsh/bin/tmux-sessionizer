#!/usr/bin/env bash

set -o pipefail

relative_path() {
    local target_abs base_abs
    local target=$1
    local base=$2
    cd "$(dirname "$target")" || exit
    target_abs=$(pwd)/$(basename "$target")
    cd "$base" || exit
    base_abs=$(pwd)
    echo "${target_abs#"$base_abs"/}"
}

if [[ $# -gt 0 ]]; then
    selected=$1
    shift

    if [ -d "$selected/../.bare" ]; then
        # If this parent directory for the selected directory is a bare git repository,
        # prepend the parent directory to the selected directory.
        selected_session=$(relative_path "$selected" "$TMUX_CURRENT_DIR" | tr . _)
    else
        selected_session=$(basename "$selected" | tr . _)
    fi
else
    current_session=$(tmux display-message -p '#S')
    current_session=${current_session/./_}

    base_dir=$(basename "$TMUX_CURRENT_DIR")
    default_sessions=()

    while IFS=$'\n' read -r line; do
        # If this line is a bare git repository, skip it
        if [[ -d "$line/.bare" ]]; then
            continue
        # If this line is a directory inside a bare git repository, add it
        elif [ -d "$line"/../.bare ]; then
            # Bash variable substitution
            # From: https://stackoverflow.com/questions/22401091/bash-variable-substitution-vs-dirname-and-basename
            parent_dirname=${line%/*}
            parent_basename=${parent_dirname##*/}
            parent_parent_dirname=${parent_dirname%/*}
            parent_parent_basename=${parent_parent_dirname##*/}
            default_sessions+=("$parent_parent_basename/$parent_basename/${line##*/}")
        # If the parent directory of the current line is TMUX_CURRENT_DIR/misc we add this line
        elif [[ "${line%/*}" == "$TMUX_CURRENT_DIR/misc" ]]; then
            default_sessions+=("misc/${line##*/}")
        fi
    done < <(
        find "$TMUX_CURRENT_DIR" -mindepth 1 -maxdepth 3 -type d -not -name '.*' |
            grep -E -v "$current_session$|dotfiles$|notes$|github$|$base_dir$"
    )

    # From: https://www.baeldung.com/linux/sort-bash-arrays
    readarray -td '' default_sessions < <(printf '%s\0' "${default_sessions[@]}" | sort -z)

    # Include active sessions in recently used order
    while IFS=$'\n' read -r line; do sessions+=("* $line"); done < <(
        tmux list-sessions -F '#{session_last_attached} #S' |
            grep -E -v "$current_session$|dotfiles$|notes$|github$|$base_dir$" |
            sort --numeric-sort --reverse |
            cut -d' ' -f2 |
            head -n 10
    )

    for session in "${default_sessions[@]}"; do
        # If a location appears in the active sessions or it is the current session, we skip it
        escaped_session=${session/./_}
        # shellcheck disable=SC2076
        if [[ " ${sessions[*]} " =~ " $escaped_session " ]] || [[ "$escaped_session" == "$current_session" ]]; then
            continue
        fi
        sessions+=("$session")
    done

    # shellcheck disable=SC2086,SC2016
    selected=$(
        printf "%s\n" "${sessions[@]}" |
            "$HOME"/.tmux/plugins/tmux-fzf/scripts/.fzf-tmux \
                --header='Select target session.' \
                --preview='$HOME/.local/bin/tmux-preview {}' \
                --preview-window 40%,noinfo $TMUX_FZF_OPTIONS
    )
    selected_session=$(tr . _ <<<"$selected" | cut -d' ' -f2)
fi

# Exit if no session was selected
if [[ -z $selected ]]; then
    exit 0
fi

# If this is the basename of TMUX_CURRENT_DIR use the absolute path
if [[ "$selected" == $(basename "$TMUX_CURRENT_DIR") ]]; then
    selected="$TMUX_CURRENT_DIR"
# If this is a relative path, prepend it with $TMUX_CURRENT_DIR
elif [[ -n $selected ]] && [[ "${selected:0:1}" != "/" ]]; then
    selected="$TMUX_CURRENT_DIR/$selected"
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "$selected_session" -c "$selected"
    exit 0
fi

if ! tmux has-session -t="$selected_session" 2>/dev/null; then
    tmux new-session -ds "$selected_session" -c "$selected"
fi

if [[ $# -gt 0 ]]; then
    tmux new-window -c "#{pane_current_path}" -t "$selected_session":
    tmux send-keys -t "$selected_session": "$*" ENTER
fi

tmux switch-client -t "$selected_session"
