#!/usr/bin/env python3

import platform
import subprocess
import _utils

branch = _utils.get_current_branch()

if platform.system() == "Darwin":
    command = "pbcopy"
else:
    command = "xclip"

subprocess.run(f"echo '{branch}' | {command}", shell=True, check=True)

print("\nThe below has been copied to your clipboard! ðŸ“‹\n")
print(branch)
