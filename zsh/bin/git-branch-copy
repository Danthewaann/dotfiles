#!/usr/bin/env bash

set -oe pipefail

CUR_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)

source "$CUR_DIR/_git-common"

branch=$(git branch --show-current)

if [[ $OSTYPE == "darwin"* ]]; then
    PBCOPY="pbcopy"
else
    PBCOPY="xclip"
fi

>&2 printf "\nThe below has been copied to your clipboard! ðŸ“‹\n\n"
echo "$branch"
echo "$branch" | $PBCOPY
