#!/usr/bin/env python3

import platform
import subprocess
import _utils

pr_url = _utils.check_output(
    ["gh", "pr", "view", "--json", "url", "--jq", ".url"]
).strip()

if platform.system() == "Darwin":
    command = "pbcopy"
else:
    command = "xclip"

subprocess.run(f"echo '{pr_url}' | {command}", shell=True, check=True)

print("\nThe below has been copied to your clipboard! ðŸ“‹\n")
print(pr_url)
