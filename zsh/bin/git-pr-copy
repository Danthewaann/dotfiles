#!/usr/bin/env python3

import platform
import subprocess

pr_url = subprocess.check_output(
    ["gh", "pr", "view", "--json", "url", "--jq", ".url"], text=True
).strip()

if platform.system() == "Darwin":
    command = "pbcopy"
else:
    command = "xclip"

subprocess.run(f"echo '{pr_url}' | {command}", shell=True, check=True)

print("\nThe below has been copied to your clipboard! ðŸ“‹\n")
print(pr_url)
