#!/usr/bin/env bash

set -oe pipefail

CUR_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)

source "$CUR_DIR/_git-common"

pr_url=$(gh pr view --json url --jq .url)

if [[ $OSTYPE == "darwin"* ]]; then
    PBCOPY="pbcopy"
else
    PBCOPY="xclip"
fi

>&2 printf "\nThe below has been copied to your clipboard! ðŸ“‹\n\n"
echo "$pr_url"
echo "$pr_url" | $PBCOPY
